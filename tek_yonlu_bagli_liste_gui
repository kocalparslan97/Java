package odev1;

class veri {

    int sayi;
    veri next;

    public veri(int sayi) {
        this.next = null;
        this.sayi = sayi;
    }

}

public class bagli_liste {

    veri head;
    veri tail;

    public bagli_liste() {
        head = null;
        tail = null;
    }

    void basa_ekle(int a) {
        veri b = new veri(a);
        if (tail == null) {
            tail = b;
        }
        b.next = head;
        head = b;

    }

    void sona_ekle(int a) {
        veri b = new veri(a);
        if (head == null) {
            head = b;
        }
        tail.next = b;
        tail = b;

    }

    void ortaya_ekle(int yeni, int onceki) {
        veri gelen = new veri(yeni);
        veri once = new veri(onceki);
        veri tmp = head;
        while (tmp.next != null) {
            if (tmp.sayi == once.sayi) {
                break;

            }
            tmp = tmp.next;

        }
        gelen.next = tmp.next;
        tmp.next = gelen;
    }
    
    void ortadan_sil(int gelen) {
        veri silinecek=new veri(gelen);
        veri tmp=head;
        while (tmp.next != null) {
            if (silinecek.sayi ==tmp.next.sayi) {
                tmp.next=tmp.next.next;
                return;
            }
            tmp = tmp.next;
        }
    }

    void basi_sil() {
        head = head.next;
        if (head == null) {
            tail = null;
        }
    }

    void sondan_sil() {
        veri tmp, once;
        tmp = head;
        once = null;
        while (tmp != tail) {
            once = tmp;
            tmp = tmp.next;
        }
        if (once == null) {
            head = null;
        } else {
            once.next = null;
        }
        tail = once;
    }

    /*void ortadan_sil(int silincek) {
        veri sil = new veri(silincek);

        veri tmp = head, once = null;
        while (tmp.next != sil) {

            once = tmp;
            tmp = tmp.next;
        }
        once.next = sil.next;

    }*/

    String goruntule() {
        veri a = head;
        String g = "";
        while (a != null) {

            g += "--->" + a.sayi;
            a = a.next;

        }
        return g;
    }
}
